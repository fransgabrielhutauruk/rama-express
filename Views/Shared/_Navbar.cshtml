@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    var area = ViewContext.RouteData.Values["area"]?.ToString();
}

<header class="bg-white shadow-sm sticky-top py-1">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <!-- Brand/Logo -->
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="~/images/ramaexpress.png" alt="PT RAMA EXPRESS" class="me-2" style="height: 40px;">
                <span class="fw-bold text-primary fs-4">PT RAMA EXPRESS</span>
            </a>
            <!-- Mobile menu toggle -->
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navigation Menu -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Home" && action == "Index" && string.IsNullOrEmpty(area) ? "active" : "") fw-semibold px-3"
                           asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Home" && action == "Tentang" && string.IsNullOrEmpty(area) ? "active" : "") fw-semibold px-3"
                           asp-area="" asp-controller="Home" asp-action="Tentang">
                            <i class="fas fa-info-circle me-1"></i>Tentang
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Home" && action == "Kontak" && string.IsNullOrEmpty(area) ? "active" : "") fw-semibold px-3"
                           asp-area="" asp-controller="Home" asp-action="Kontak">
                            <i class="fas fa-phone me-1"></i>Kontak
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Home" && action == "Layanan" && string.IsNullOrEmpty(area) ? "active" : "") fw-semibold px-3"
                           asp-area="" asp-controller="Home" asp-action="Layanan">
                            <i class="fas fa-cogs me-1"></i>Layanan
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Home" && action == "Training" && string.IsNullOrEmpty(area) ? "active" : "") fw-semibold px-3"
                           asp-area="" asp-controller="Home" asp-action="Training">
                            <i class="fas fa-graduation-cap me-1"></i>Training
                        </a>
                    </li>
                </ul>
                @if (Context.Session.GetString("UserRole")?.ToLower() == "admin")
                {
                    <div class="d-flex align-items-center ms-auto">
                        <a class="btn btn-outline-primary me-2" asp-controller="Home" asp-action="Index" asp-area="Admin">
                            <i class="fas fa-user-shield me-1"></i>Admin
                        </a>
                    </div>
                }
                else if (Context.Session.GetString("UserRole")?.ToLower() == "karyawan")
                {
                    <div class="d-flex align-items-center ms-auto">
                        <a class="btn btn-outline-primary me-2" asp-controller="Home" asp-action="Index" asp-area="Karyawan">
                            <i class="fas fa-user-tie me-1"></i>Karyawan
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center ms-auto ps-3">
                        <a class="btn btn-outline-primary me-2" asp-controller="User" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                    </div>
                }
            </div>
        </div>
    </nav>
</header>