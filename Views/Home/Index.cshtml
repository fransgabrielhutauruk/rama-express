@{
    ViewData["Title"] = "Beranda";
}

<!-- Hero Section -->
<div class="hero-section text-white text-center d-flex align-items-center justify-content-center flex-column" data-aos="fade-in">
    <h1 class="display-3 fw-bold mb-3">Selamat Datang di <span class="text-accent">Rama Express</span></h1>
    <p class="lead">Mitra terpercaya Anda dalam layanan ekspedisi antar pulau dan provinsi di seluruh Indonesia.</p>
    <a href="/Kontak" class="btn btn-accent btn-lg mt-4">Hubungi Kami</a>
</div>

<!-- About Section -->
<div class="container py-5" data-aos="fade-up">
    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="https://images.unsplash.com/photo-1593933950971-7c3a775a6fe2?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Ekspedisi" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6 text-black">
            <h2 class="fw-bold text-black">Tentang Kami</h2>

            <p>
                PT Rama Express adalah perusahaan ekspedisi profesional yang siap melayani pengiriman barang antar pulau dan provinsi, baik dalam skala kecil maupun besar. Dengan pengalaman dan jaringan yang luas, kami hadir untuk memenuhi kebutuhan logistik Anda secara aman, cepat, dan terpercaya
            </p>
        </div>
    </div>
</div>

<!-- Services Section -->
<div class="bg-light py-5" data-aos="fade-up" data-aos-delay="100">
    <div class="container">
        <h2 class="text-center mb-5 text-accent fw-bold">Layanan Kami</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="card-title text-accent">Pengiriman Antar Kota</h5>
                        <p class="card-text">Layanan cepat dan aman untuk pengiriman barang ke seluruh kota besar di Indonesia.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="card-title text-accent">Ekspedisi Antar Pulau</h5>
                        <p class="card-text">Kami menjangkau daerah terpencil hingga kota besar di berbagai pulau di Indonesia.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="card-title text-accent">Kargo dan Logistik</h5>
                        <p class="card-text">Solusi kargo untuk pengiriman dalam jumlah besar dengan efisiensi dan profesionalisme tinggi.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- AOS Scripts -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
}

<!-- Custom Styles -->
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <style>
        body {
            background-color: #fff5f5;
            color: #212529;
        }

        .text-accent {
            color: #dc3545;
        }

        .btn-accent {
            background-color: #dc3545;
            border: none;
            color: white;
        }

            .btn-accent:hover {
                background-color: #bb2d3b;
            }

        .hero-section {
            height: 90vh;
            background: linear-gradient(rgba(220, 53, 69, 0.7), rgba(220, 53, 69, 0.7)), url('https://images.unsplash.com/photo-1593121926538-7d6cc748beab?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80') center/cover no-repeat;
            padding: 0 1rem;
        }

        h1 span.text-accent {
            color: #fff3f3;
        }

        .card {
            border-radius: 1rem;
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.75rem 1.5rem rgba(220, 53, 69, 0.3);
            }

        .card-title {
            font-weight: 600;
        }

        h2 {
            color: #fff;
        }

        .bg-light {
            background-color: #fff3f3 !important;
        }
    </style>
}
