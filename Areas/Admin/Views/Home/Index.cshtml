<!-- Index.cshtml (Dashboard Content) -->
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Welcome to RamaExpress Admin Dashboard</h4>
            </div>
            <div class="card-body">
                <p>Selamat datang di dashboard admin pelatihan PT Rama Express. Gunakan navigasi sidebar untuk mengakses berbagai fitur sistem pelatihan.</p>

                <div style="height: 1000px">tes</div>
                <!-- Training Dashboard Cards -->
                <div class="row mt-4">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Total Karyawan
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">247</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-people fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Pelatihan Aktif
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-book fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            Sertifikat Terbit
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">189</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-award fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                            Pending Review
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">23</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="bi bi-clock fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="row mt-4">
                    <div class="col-lg-8">
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Aktivitas Terbaru</h6>
                            </div>
                            <div class="card-body">
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Training "Safety Driving" selesai</h6>
                                            <p class="mb-1">25 karyawan telah menyelesaikan pelatihan</p>
                                            <small>2 jam yang lalu</small>
                                        </div>
                                        <span class="badge bg-success rounded-pill">Selesai</span>
                                    </div>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Karyawan baru terdaftar</h6>
                                            <p class="mb-1">Ahmad Rizki bergabung sebagai Driver</p>
                                            <small>4 jam yang lalu</small>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">Baru</span>
                                    </div>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Sertifikat diterbitkan</h6>
                                            <p class="mb-1">15 sertifikat untuk training "Customer Service"</p>
                                            <small>1 hari yang lalu</small>
                                        </div>
                                        <span class="badge bg-info rounded-pill">Sertifikat</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a asp-area="Admin" asp-controller="Home" asp-action="CreatePelatihan" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-2"></i>Buat Pelatihan Baru
                                    </a>
                                    <a asp-area="Admin" asp-controller="Home" asp-action="Pengguna" class="btn btn-success">
                                        <i class="bi bi-person-plus me-2"></i>Tambah Karyawan
                                    </a>
                                    <a asp-area="Admin" asp-controller="Home" asp-action="LaporanPelatihan" class="btn btn-info">
                                        <i class="bi bi-graph-up me-2"></i>Lihat Progress
                                    </a>
                                    <a asp-area="Admin" asp-controller="Home" asp-action="Sertifikat" class="btn btn-warning">
                                        <i class="bi bi-award me-2"></i>Kelola Sertifikat
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>